// the captain for him to no longer follow the player
// level.medicfindtarget = 512 default

//--------------------------------------------------------------------------------
medic_health:
//--------------------------------------------------------------------------------
	while (isalive $medic)
	{
//		dprintln ( "medic health : " + $medic.health )
		wait 1
	}
	while (1)
	{
		dprintln "medic died"
		waitframe
	}
end
